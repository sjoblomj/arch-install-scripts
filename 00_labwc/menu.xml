<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu>

	<menu id="root-menu">
		<separator label="Ojbox"/>
		<item label="Run program...">
			<action name="Execute">
				<command>fuzzel</command>
			</action>
		</item>
		<item label="Terminal">
			<action name="Execute">
				<command>terminator</command>
			</action>
		</item>
		<menu id="screenshot-menu" label="Screenshots">
			<item label="Screenshot of whole screen">
				<action name="Execute" command='grim - | swappy -f -' />
			</item>
			<item label="Screenshot of part of the screen">
				<action name="Execute" command='grim -g "$(slurp)" - | swappy -f -' />
			</item>
			<item label="Screenshot of whole screen in 5s">
				<action name="Execute" command='sleep 5 ; grim - | swappy -f -' />
			</item>
		</menu>
		<item label="Exit labwc">
			<action name="Exit" />
		</item>
		<item label="Reboot">
			<action name="Execute">
				<command>reboot</command>
			</action>
		</item>
		<item label="Shut down">
			<action name="Execute">
				<command>systemctl -i poweroff</command>
			</action>
		</item>
	</menu>
</openbox_menu>
